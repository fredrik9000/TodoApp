<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/list_item_vertical_padding"
        android:paddingBottom="@dimen/list_item_vertical_padding"
        android:paddingLeft="@dimen/list_item_horizontal_padding"
        android:paddingRight="@dimen/list_item_horizontal_padding">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/complete_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="@{todo.isCompleted}"
            android:padding="@dimen/list_item_checkbox_padding"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_marginStart="@dimen/list_item_checkbox_scale_correction_padding"
            android:layout_marginTop="@dimen/list_item_checkbox_scale_correction_padding"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_text_view"
            android:layout_width="0dp"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_item_text_horizontal_margin"
            android:layout_marginRight="@dimen/list_item_text_horizontal_margin"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{todo.description}"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="@dimen/list_item_text_size"
            tools:text="Todo title goes here" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alarm_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_notifications_active_black_24dp"
            android:tint="@color/notification_active_icon"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/note_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="@dimen/list_item_text_horizontal_margin"
            android:src="@drawable/ic_note_black_24dp"
            android:tint="@color/note_icon"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <data>

        <variable
            name="todo"
            type="com.github.fredrik9000.todolist.model.Todo" />
    </data>

</layout>