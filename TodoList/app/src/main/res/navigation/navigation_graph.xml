<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.fredrik9000.todolist.todolist.MainFragment"
        android:label="@string/title_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_addEditTodoFragment"
            app:destination="@id/addEditTodoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/addEditTodoFragment"
        android:name="com.github.fredrik9000.todolist.add_edit_todo.AddEditTodoFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_edit_todo" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="priority"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="hasNotification"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="notificationId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="notificationYear"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="notificationMonth"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="notificationDay"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="notificationHour"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="notificationMinute"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>